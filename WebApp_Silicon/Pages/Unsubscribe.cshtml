@page
@model WebApp_Silicon.Pages.UnsubscribeModel
@{
    ViewData["Title"] = "Unsubscribe";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script defer src="https://kit.fontawesome.com/0da086c9c3.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    <link rel="icon" type="image/svg+xml" href="./images/favicon.svg">
    <title>@ViewData["Title"] - Silicon</title>
</head>
<body>
    <section id="unsubscribe">
        <a class="btn-theme-s" asp-page="/Index"><i class="fa-solid fa-house"></i>Back to home</a>
        <div class="container">
            <h1>Unsubscribe to newsletters!</h1>
            <form method="post">
                <input type="email" id="email" name="Email" placeholder="Enter your emailadress" required>
                <button class="btn-theme" type="submit">Unsubscribe</button>
            </form>
            @if (!string.IsNullOrEmpty(Model.Message))
            {
                <div>@Model.Message</div>
            }
        </div>
    </section>
    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
